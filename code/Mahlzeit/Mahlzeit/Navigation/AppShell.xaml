<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Mahlzeit.Views"
       x:Class="Mahlzeit.Navigation.AppShell">

    <!-- Flyout-Menï¿½ mit Gruppierung -->
    <FlyoutItem Title="Allgemein" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" Icon="home.svg" ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent Title="Calendar" Icon="calendar.svg" ContentTemplate="{DataTemplate views:Calendar.CalendarPage}" />
		<ShellContent Title="Group" Icon="group.svg" ContentTemplate="{DataTemplate views:Group.GroupPage}" />
		<ShellContent Title="ProcessBar" Icon="bars.svg" ContentTemplate="{DataTemplate views:ProcessBars.ProcessBarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Weitere Seiten" FlyoutDisplayOptions="AsMultipleItems">
		<ShellContent Title="Account" Icon="user.svg" ContentTemplate="{DataTemplate views:User.UserPage}" />
        <ShellContent Title="Settings" Icon="gear.svg" ContentTemplate="{DataTemplate views:Settings.SettingsPage}" />
        <ShellContent Title="Info" Icon="info.svg" ContentTemplate="{DataTemplate views:Info.InfoPage}" />
    </FlyoutItem>
</Shell>